@model IEnumerable<ShoppingList.Models.ToDo>

<div id="progressBarShopping">
    
    <div class="progress">
        <div class="progress-bar" role="progressbar"
             style="width:@(Html.AttributeEncode(ViewBag.Percent))%">
            <p>@(ViewBag.Percent)%</p>
        </div>
    </div>

</div>

<table class="table">
   
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item   .IsDone)
                {
                    <div class="CompletedShopping">@Html.DisplayFor(modelItem => item.Description)</div>
                } else {
                    @Html.DisplayFor(modelItem => item.Description)
                }
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.IsDone, new { id=item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<script src="~/Custom_Script/AddActiveCheckbox.js"></script>